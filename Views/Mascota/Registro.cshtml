@model VeterinariaMVC.Models.Mascota

<h2>Registro de Mascota</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label>Nombre:</label>
        @Html.TextBoxFor(m => m.Nombre)
        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
    </div>
    <div>
        <label>Especie:</label>
        @Html.TextBoxFor(m => m.Especie)
        @Html.ValidationMessageFor(m => m.Especie, "", new { @class = "text-danger" })
    </div>
    <div>
        <label>Raza:</label>
        @Html.TextBoxFor(m => m.Raza)
        @Html.ValidationMessageFor(m => m.Raza, "", new { @class = "text-danger" })
    </div>
    <div>
        <label>Edad:</label>
        @Html.TextBoxFor(m => m.Edad, new { type = "number" })
        @Html.ValidationMessageFor(m => m.Edad, "", new { @class = "text-danger" })
    </div>
    <div>
        <label>Propietario:</label>
        @Html.TextBoxFor(m => m.Propietario)
        @Html.ValidationMessageFor(m => m.Propietario, "", new { @class = "text-danger" })
    </div>
    <button type="submit">Registrar</button>

    @if (ViewBag.Mensaje != null)
    {
        <p>@ViewBag.Mensaje</p>
    }
}